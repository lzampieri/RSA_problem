{
    "tasks": [
        {
            "type": "shell",
            "label": "Compile_all",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\*.cpp",
                "-o",
                "${workspaceFolder}\\debug\\main.exe",
                "-llibfftw3",
                "-std=c++2a",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "Cpp_clean"
            ]
        }, {
            "type": "shell",
            "label": "Cpp_clean",
            "command": "del",
            "args": [
                "${workspaceFolder}\\debug\\*.exe",
            ],
        }
    ],
    "version": "2.0.0"
}